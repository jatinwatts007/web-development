<!DOCTYPE html>
<html>
<head>
 <title></title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="/stylesheets/main.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container-fluid">
		
			
	<div class="navbar-header">
		<a class="navbar-brand" href="/">Yelpcamp</a>
	</div>	
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div  id="navbarSupportedContent">
    <ul  class="navbar-nav mr-auto">
	<div class="nav justify-content-end">
	<% if(!currentUser) { %>	
      <li class="nav-item active">
        <a class="nav-link" href="/register">Signup<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item-active">
		  <a class="nav-link" href="/login">login <span class="sr-only">(current)</span></a>
      </li>
      <% } else { %>
		<li class="dropdown" class="nav-item active">
                          <a  class="nav-link" href="/notifications" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge"><%= notifications.length %></span></a>
                          <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/notifications">View past notifications</a>
							  </li>
                            <% notifications.forEach(function(notification) { %>                          
                              <li>  
                                    <a class="dropdown-item" href="/notifications/<%= notification.id %>">
                                        <%= notification.username %> created a new campground
                                    </a>
							  </li>
                            <% }); %>
							</ul>
                        </li>
		<li class="nav-item-active">
		  <a class="nav-link" href="#" >Signed in as <%= currentUser.username %><span class="sr-only">(current)</span></a>
      </li>
		<li class="nav-item-active">
		  <a class="nav-link" href="/logout" >logout <span class="sr-only">(current)</span></a>
      </li>
	<% } %>
		</div>
    </ul>
    
  </div>
		</div>		
</nav>
	<div class="container">
		<% if(error && error.length>0){ %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
		<% } %>
		<% if(success && success.length>0){ %>
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>
		<% } %>
	</div>
	
